<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ResultTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@color/colorBrown</item>
        <item name="android:textSize">@dimen/sp_50</item>
    </style>
    <style name="InputText" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@color/colorBrown</item>
        <item name="android:textSize">@dimen/sp_45</item>
    </style>

    <style name="NumberTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/colorBrown300</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_40</item>
    </style>
    <style name="OperaterButton" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorOrange</item>
        <item name="android:textSize">@dimen/sp_40</item>
    </style>
</resources>
